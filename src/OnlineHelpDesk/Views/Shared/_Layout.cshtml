<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - Online Help Desk</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    @Styles.Render("~/Content/stylesheet")
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <!-- Google fonts - Popppins for copy-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,800">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="~/Content/AppStyleSheet/css/style.default.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="~/Content/AppStyleSheet/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/Content/AppImages/favicon.png">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>

    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    <!-- StyleSheet area -->
    @RenderSection("stylesheets", required: false)
</head>
<body>
    <!-- navbar-->
    @Html.Partial("_HeaderPartial")
    <!-- sidebar -->
    <div class="d-flex align-items-stretch">
        
        @Html.Partial("_SidebarPartial")
        
        <div class="page-holder w-100 d-flex flex-wrap">
            <div class="container-fluid px-xl-5">
                <!-- body-content -->
                @RenderBody()
            </div>
            <!-- footer -->
            @Html.Partial("_FooterPartial")
        </div>
    </div>
    <!-- JavaScript files-->
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
    @Scripts.Render("~/bundles/javascript")
    @Scripts.Render("~/bundles/notification")
    @RenderSection("scripts", required: false)
</body>
</html>