@model OnlineHelpDesk.Models.ProfileViewModel

@{
    ViewBag.Title = "Profile Details";
}
<section class="py-5">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-4 col-sm-4">
            <dl class="dl-horizontal text-center">
                <dd>
                    <a href="User/ChangeAvatar">
                        <img class="img-fluid rounded-circle border-green" style="max-width: 80%" src="../@Html.DisplayFor(model => model.ProfilePicture).ToString().Substring(1)" alt="Alternate Text" />
                    </a>
                </dd>
            </dl>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header gradient-primary text-white">
                    <h2 class="h4 text-uppercase mb-0">Profile Information</h2>
                </div>
                <div class="card-body row">
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <dl class="dl-horizontal">
                            <dt class="h5">
                                @Html.DisplayNameFor(model => model.UserIdentity)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.UserIdentity)
                            </dd>

                            <dt class="h5">
                                @Html.DisplayNameFor(model => model.FullName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.FullName)
                            </dd>

                            <dt class="h5">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Email)
                            </dd>

                            <dt class="h5">
                                @Html.DisplayNameFor(model => model.Contact)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Contact)
                            </dd>

                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
